#!/bin/bash

# √úberpr√ºfen, ob Whiptail installiert ist, und falls nicht, es installieren
if ! command -v whiptail &> /dev/null; then
    echo "Whiptail ist nicht installiert. Installiere Whiptail..."
    
    # Je nach Paketverwaltungssystem die Installation durchf√ºhren
    if command -v apt-get &> /dev/null; then
        sudo apt-get update
        sudo apt-get install -y whiptail
    elif command -v dnf &> /dev/null; then
        sudo dnf install -y newt
    elif command -v yum &> /dev/null; then
        sudo yum install -y newt
    else
        echo "Paketverwaltungssystem nicht erkannt. Bitte installiere Whiptail manuell."
        exit 1
    fi
fi

# Kopfzeile f√ºr die Pterodactyl Panel Installation anzeigen
clear
echo "----------------------------------"
echo "Pterodactyl Panel Installation"
echo "Vereinfacht von Pavl21, Script von https://pterodactyl-installer.se/ wird verwendet. "
echo "----------------------------------"
sleep 3  # 3 Sekunden warten, bevor das Skript fortgesetzt wird

# Konfiguration von dpkg
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Konfiguration von dpkg..."
sudo dpkg --configure -a

# Installieren der erforderlichen Pakete
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Installation der erforderlichen Pakete..."
sudo apt-get update
sudo apt-get install -y dnsutils curl openssl

# Befehlszeile leeren
clear

# Anzeige einer Whiptail-GUI zur Eingabe der Panel-Domain
panel_domain=$(whiptail --inputbox "Bitte gebe die Domain/FQDN f√ºr das Panel ein:" 10 50 3>&1 1>&2 2>&3)
if [ $? -ne 0 ]; then
    echo "Abbruch durch Benutzer."
    exit 1
fi

# IP-Adresse des Servers
server_ip=$(hostname -I | awk '{print $1}')
clear
echo "Es wird gepr√ºft, ob die Domain mit der IP korrekt verbunden wurde..."
sleep 2

# IP-Adresse aus dem DNS-A-Eintrag der Domain extrahieren
dns_ip=$(dig +short $panel_domain)

if [ "$dns_ip" == "$server_ip" ]; then
    clear
    echo "VERIFIZIERT - - - - - - - - - - - - - - - - - - - - -"
    echo ""
    echo "‚úÖ Die Domain $panel_domain ist korrekt mit der IP-Adresse dieses Servers ($server_ip) verkn√ºpft. Installation wird fortgesetzt."
    echo ""
    echo "VERIFIZIERT - - - - - - - - - - - - - - - - - - - - -"
    sleep 4
else
    clear
    echo "KEINE √úBEREINSTIMMUNG - - - - - - - - - - - - - - - - - - - - -"
    echo ""
    echo "‚ùå Die Domain $panel_domain ist mit einer anderen IP-Adresse verbunden ($dns_ip)."
    echo "Pr√ºfe, ob die DNS-Eintr√§ge richtig sind, das sich kein Schreibfehler eingeschlichen hat und ob du in Cloudflare (Falls du es nutzt) den Proxy deaktiviert hast. Die Installation wird abgebrochen."
    echo ""
    echo "KEINE √úBEREINSTIMMUNG - - - - - - - - - - - - - - - - - - - - -"
    exit 1
fi

# Anzeige einer Whiptail-GUI zur Eingabe der E-Mail-Adresse
admin_email=$(whiptail --inputbox "Bitte gebe die E-Mail-Adresse f√ºr das SSL-Zertifikat und den Admin-Benutzer ein. Durch Eingabe best√§tigst du die Nutzungsbedingungen von Let's Encrypt." 10 50 3>&1 1>&2 2>&3)
if [ $? -ne 0 ]; then
    echo "Die Installation wurde vom Nutzer abgebrochen."
    exit 1
fi

# Funktion zum Generieren eines 64 Zeichen langen zuf√§lligen Passworts ohne Sonderzeichen
generate_password() {
    < /dev/urandom tr -dc A-Za-z0-9 | head -c64
}

user_password=$(generate_password)

clear
echo "STARTVORGANG - - - - - - - - - - - - -"
echo ""
echo "Bitte warte, bis die Installation abgeschlossen ist. Das kann je nach Leistung deines Servers einige Minuten dauern..."
echo ""
echo "STARTVORGANG - - - - - - - - - - - - -"
sleep 5  # 2 Sekunden warten

# Installation des Panels
bash <(curl -s https://pterodactyl-installer.se) <<EOF
0
panel
pterodactyl
$user_password
Europe/Berlin
$admin_email
$admin_email
user
Admin
User
$user_password
$panel_domain
N
N
N
y
yes
EOF

# Update und Installation von certbot
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Update und Installation von Certbot..."
sudo apt-get update && sudo apt-get install certbot python3-certbot-nginx -y

# Stoppen von nginx
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Stoppen von Nginx..."
sudo systemctl stop nginx

# SSL-Zertifikat mit Certbot erstellen und Nginx konfigurieren
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è SSL-Zertifikat erstellen und Nginx konfigurieren..."
sudo certbot --nginx -d $panel_domain --email $admin_email --agree-tos --non-interactive

# Freigabe von Port 80 und Port 443
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Freigabe von Port 80 und Port 443..."
sudo fuser -k 80/tcp
sudo fuser -k 443/tcp

# Neustarten von nginx
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è Neustarten von Nginx..."
sudo systemctl start nginx

# Installieren von GermanDactyl
clear
echo "STATUS - - - - - - - - - - - - - - - -"
echo "‚öôÔ∏è GermanDactyl wird installiert..."
curl -sSL https://install.germandactyl.de/ | sudo bash -s -- -v1.11.3
# GermanDactyl ist noch nicht aktuell, daher wird eine fr√ºhrere Version von 1.11.3 genutzt. Das macht aber keinen gro√üen Unterschied.



# Erfolgreiche Installationsnachricht in zugangsdaten.txt speichern
echo "PTERODACTYL ZUGANGSDATEN -----------------" > zugangsdaten.txt
echo "Installation des Panels erfolgreich." >> zugangsdaten.txt
echo "üåê Die verwendete Domain ist: $panel_domain" >> zugangsdaten.txt
echo "üîë Ihre generierten Zugangsdaten sind:" >> zugangsdaten.txt
echo "üë§ Benutzername: User" >> zugangsdaten.txt
echo "üîí Passwort (64 Zeichen): $user_password" >> zugangsdaten.txt
echo "PTERODACTYL ZUGANGSDATEN ------------------" >> zugangsdaten.txt
clear
echo ""
echo ""
echo "INFO - - - - - - - - - - - - - - - -"
echo ""
echo "Die Zugangsdaten wurden in die Datei 'zugangsdaten.txt' gespeichert, diese kannst du mit dem Befehl cat zugangsdaten.txt sehen. Du kannst dich nun in $panel_domain anmelden."
echo "HINWEIS: Pterodactyl ist noch nicht vollst√§ndig eingerichtet. Du musst noch Wings einrichten und eine Node anlegen, damit du Server aufsetzen kannst. Im Panel findest du das erstellen einer Node hier: https://$panel_domain/admin/nodes/new ."
echo ""
echo "INFO - - - - - - - - - - - - - - - -"
